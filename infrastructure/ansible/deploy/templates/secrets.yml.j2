parameters:
    # A secret key that's used to generate certain security-related tokens
    env(SYMFONY_SECRET): {{ secret_key_base }}

    # Cache
    env(CACHE_POOL): cache.redis
    env(CACHE_DSN): {{ cache_dsn }}
    env(REDIS_HOST): {{ redis_host }}

    # Database
    env(DATABASE_DRIVER): pdo_mysql
    env(DATABASE_HOST): {{ database_host }}
    env(DATABASE_PORT): ~
    env(DATABASE_NAME): {{ database_name }}
    env(DATABASE_USER): {{ database_user }}
    env(DATABASE_PASSWORD): {{ database_password }}

    # Host
    env(HOSTNAME): {{ hostname }}
    env(SCHEME): {{ scheme }}

    # AMAZON Services
    env(AMAZON_KEY): {{ aws_s3_key }}
    env(AMAZON_SECRET): {{ aws_s3_secret }}
    env(AMAZON_REGION): eu-central-1
    env(AMAZON_VERSION): "2006-03-01"
    env(AMAZON_BUCKET): {{ aws_s3_bucket }}
    env(AMAZON_HOST): "s3.amazonaws.com"
    env(AMAZON_BUCKET_URL): {{ aws_s3_bucket_url }}

    # Mail
    env(SENDER_ADDRESS): no-reply@santander.the-staging.com
    env(MAILER_HOST): localhost
    env(MAILER_USER): ~
    env(MAILER_PASSWORD): ~
    env(MAILER_PORT): 25

